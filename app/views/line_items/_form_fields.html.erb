<div class="line-item-fields grid grid-cols-4 lg:grid-cols-8 gap-6">
  <div class="field col-span-4">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: "1", class: 'quantity', onChange: 'updateLineItemTotal(event)' %>
  </div>
  <div class="field ">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'price', onChange: 'updateLineItemTotal(event)' %>
  </div>
  <div class="field space-y-3 font-medium">
    <p class="text-xs label">Total</p>
    <!-- TODO: Set Initial Total -->
    <p class="total inline-flex items-center">$<%= form.number_field :total, class: 'appearance-none' %></p>
  </div>
  <button type="button" aria-label="Delete item" class="delete-line-item mt-3 text-xs font-bold lg:mt-0 text-purple-400"><svg fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6"><path data-v-d7cfc67e="" fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg></button>
</div>
