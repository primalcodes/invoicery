<div class="space-y-6 mx-auto w-full max-w-3xl">
  <div class="pt-12"><%= link_to 'Back', invoices_path %></div>
  <%= render partial: 'invoices/invoice_actions' unless htmx_request? %>
  <div class="p-6 space-y-12 overflow-hidden bg-white rounded-lg shadow lg:p-12 ">
    <div class="space-y-6 bg-white lg:space-x-10 lg:flex lg:justify-between lg:space-y-0">
      <div class="space-y-1">
        <h1><span class="text-gray-600">#</span><span class="font-bold"><%= @invoice.id %></span></h1>
        <p class="text-sm leading-normal text-gray-600">
          <%= @invoice.description %>
        </p>
        <p class="text-sm leading-normal text-gray-600">
          <%= @invoice.payment_term.name %>:
          <i><%= @invoice.payment_term.description %></i>
        </p>
      </div>
      <div class="text-sm lg:text-right text-gray-600 lg:flex-shrink-0">
        <%= render partial: 'addresses/address', locals: {address: @invoice.sender_address} %>
      </div>
    </div>
    <div class="grid grid-cols-4 gap-6 lg:grid-cols-7">
      <div class="flex flex-col self-stretch col-span-2 space-y-6">
        <div>
          <h2 class="mb-2 text-sm text-gray-600">Invoice Date</h2>
          <p class="font-bold">
            6 Sep 2021<br>
            <span class="text-red-500">NEEDS UPDATE</span>
          </p>
        </div>
        <div>
          <h2 class="mb-2 text-sm text-gray-600">
            Payment Due
          </h2>
          <p class="font-bold">
            <%= @invoice.payment_date %>
          </p>
        </div>
      </div>
      <div class="col-span-2">
        <h2 class="mt-auto mb-2 text-sm text-gray-600">
          Bill To
        </h2>
        <p class="font-bold"><%= @invoice.client_name %></p>
        <%= render partial: 'addresses/address', locals: {address: @invoice.client_address} %>
      </div>
      <div class="col-span-4 lg:col-span-3">
        <h2 class="mt-auto mb-2 text-sm text-gray-600">
          Sent To
        </h2>
        <p class="font-bold truncate"><%= @invoice.client_email %></p>
      </div>
    </div>
    <div class="overflow-hidden rounded-lg bg-gray-100">
      <div class="p-8">
        <ul class="hidden lg:block lg:mb-8 ">
          <li class="text-xs lg:grid lg:gap-6 lg:grid-cols-9 text-mj-purple-gray-3">
            <p class="col-span-4 ">Item Name</p>
            <p class="col-span-1 text-center">QTY.</p>
            <p class="col-span-2 text-right">Price</p>
            <p class="col-span-2 text-right">
              Total
            </p>
          </li>
        </ul>
        <ul class="space-y-6">
          <li class="grid items-center grid-cols-2 gap-6 text-sm font-bold lg:grid-cols-9">
            <div class="lg:col-span-4">
              <p class="capitalize">etc. etc.</p>
              <p class="lg:hidden text-mj-purple-gray-3">
                3 x $100
              </p>
            </div>
            <div class="hidden text-center lg:block lg:col-span-1 text-mj-purple-gray-3">
              <p class="text-center">
                3
              </p>
            </div>
            <div class="hidden text-right lg:col-span-2 lg:block text-mj-purple-gray-3">
              <p>$300.00</p>
            </div>
            <div class="text-right lg:col-span-2">
              <p>$300.00</p>
            </div>
          </li>
        </ul>
      </div>
      <div class="flex items-center justify-between p-4 text-white bg-gray-800 lg:p-6">
        <p class="text-sm">Amount Due</p>
        <p class="text-3xl font-bold">$300.00</p>
      </div>
    </div>
  </div>
</div>
<div
  class="
    side-pane
    fixed
    flex
    inset-0
    transition-all
    transform
    -translate-x-full
    w-screen
  "
>
  <div
    class="
      side-pane-content
      bg-white
      h-full
      w-full
      max-w-5xl
      shadow-lg
      space-y-12
      p-12
      shadow-lg
      transform
      -translate-x-full
      duration-300
      overflow-y-scroll
      rounded-tr-2xl rounded-br-2xl
      z-10
    "
  >
    <div id="form-box"></div>
    <button onClick="toggleContainer()">Close</button>
  </div>
  <button
    onClick="toggleContainer()"
    aria-hidden="true"
    class="
      h-screen
      w-screen
      fixed
      inset-0
      bg-black bg-opacity-25
      z-0
    "
  ></button>
</div>
